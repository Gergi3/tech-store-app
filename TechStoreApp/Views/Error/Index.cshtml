@using TechStoreApp.Models.Pages
@model ErrorPageViewModel

<section class="tp-error-area pt-50 pb-50">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-xl-6 col-lg-8 col-md-10">
                <div class="tp-error-content text-center">
                    <div class="tp-error-thumb mb-50">
                        <img
                            id="errorCodeImage"
                            style="max-width: 100%"
                            src=@($"https://httpstatusdogs.com/img/{@Model.StatusCode}.jpg")
                            alt="@Model.StatusCode">
                    </div>

                    <h3 class="tp-error-title">@Model.Title</h3>
                    <p>@Model.Text</p>

                    <a asp-action="Index" asp-controller="Home" class="tp-error-btn">Back to Home</a>
                </div>
            </div>
        </div>
    </div>
</section>
