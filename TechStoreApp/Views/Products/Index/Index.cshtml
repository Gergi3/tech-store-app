@using TechStoreApp.ViewModels.Pages
@model ProductIndexPageViewModel

<!-- breadcrumb area start -->
<vc:breadcrumb items="Model.Breadcrumb"></vc:breadcrumb>
<!-- breadcrumb area end -->

<!-- shop area start -->
<section class="tp-shop-area pb-120">
    <div class="container">
        <div class="row">
            <div class="col-xl-3 col-lg-4">
                <vc:product-filters query="Model.Query"></vc:product-filters>
            </div>
            <div class="col-xl-9 col-lg-8">
                <div class="tp-shop-main-wrapper">
                    <vc:product-list query="Model.Query"></vc:product-list>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- shop area end -->
<script type="module" src="~/js/pages/products.js"></script>
