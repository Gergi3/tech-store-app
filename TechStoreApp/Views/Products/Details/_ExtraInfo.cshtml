@model List<ExtraInfoViewModel>

<div class="tp-product-details-additional-info ">
    <div class="row justify-content-center">
        <div class="col-xl-10">
            @if (Model.Count > 0)
            {
                <table>
                    <tbody>
                        @foreach (var extraInfo in Model)
                        {
                            <tr>
                                <td>@extraInfo.Name</td>
                                <td>@extraInfo.Data</td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                @:No extra information available for this product!
            }
        </div>
    </div>
</div>
