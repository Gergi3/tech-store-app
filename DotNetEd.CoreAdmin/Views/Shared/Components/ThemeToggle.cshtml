@using DotNetEd.CoreAdmin
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<JsonLocalizer> _localizer
<div class="dropdown position-fixed bottom-0 start-0 mb-3 ms-3 bd-mode-toggle">
